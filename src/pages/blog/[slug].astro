---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getAllPosts, formatDate } from '../../lib/content';

export async function getStaticPaths() {
  const posts = await getAllPosts();
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<BaseLayout 
  title={`${post.data.title} - Blog`} 
  description={post.data.description}
  image={post.data.cover}
>
  <article>
    <!-- Back to Blog -->
    <div class="mb-6">
      <a href="/blog" class="text-blue-600 hover:text-blue-800 text-sm">
        ‚Üê Back to Blog
      </a>
    </div>
    
    <!-- Post Header -->
    <header class="mb-8">
      {post.data.cover && (
        <img 
          src={post.data.cover} 
          alt={post.data.title}
          class="w-full h-64 md:h-80 object-cover rounded-lg mb-6"
        />
      )}
      
      <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        {post.data.title}
      </h1>
      
      <div class="flex flex-col md:flex-row md:items-center md:justify-between text-sm text-gray-600 mb-4">
        <time>{formatDate(post.data.date)}</time>
        
        {post.data.tags && post.data.tags.length > 0 && (
          <div class="flex flex-wrap gap-2 mt-2 md:mt-0">
            {post.data.tags.map((tag) => (
              <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded-full text-xs">
                {tag}
              </span>
            ))}
          </div>
        )}
      </div>
      
      <div class="border-b border-gray-200 mb-8"></div>
    </header>
    
    <!-- Post Content -->
    <div class="prose max-w-none">
      <Content />
    </div>
  </article>
</BaseLayout>
