---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getAllPosts, formatDate } from '../../lib/content';

export async function getStaticPaths() {
  const posts = await getAllPosts();
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<BaseLayout
  title={`${post.data.title} - Blog`}
  description={post.data.description}
  image={post.data.cover}
>
  <article>
    <!-- Back to Blog -->
    <div class="mb-6">
      <a href="/blog" class="text-sm text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300">
        ‚Üê Back to Blog
      </a>
    </div>

    <!-- Post Header -->
    <header class="mb-8">
      {
        post.data.cover && (
          <img
            src={post.data.cover}
            alt={post.data.title}
            class="mb-6 h-64 w-full rounded-lg object-cover md:h-80"
          />
        )
      }

      <h1 class="mb-4 text-3xl font-bold text-gray-900 dark:text-gray-100 md:text-4xl">
        {post.data.title}
      </h1>

      <div
        class="mb-4 flex flex-col text-sm text-gray-600 dark:text-gray-400 md:flex-row md:items-center md:justify-between"
      >
        <time>{formatDate(post.data.date)}</time>

        {
          post.data.tags && post.data.tags.length > 0 && (
            <div class="mt-2 flex flex-wrap gap-2 md:mt-0">
              {post.data.tags.map((tag) => (
                <span class="rounded-full bg-blue-100 px-2 py-1 text-xs text-blue-800 dark:bg-blue-900/50 dark:text-blue-300">
                  {tag}
                </span>
              ))}
            </div>
          )
        }
      </div>

      <div class="mb-8 border-b border-gray-200 dark:border-gray-700"></div>
    </header>

    <!-- Post Content -->
    <div class="prose dark:prose-invert max-w-none">
      <Content />
    </div>
  </article>
</BaseLayout>
