---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getAllPosts, formatDate } from '../../lib/content';

const posts = await getAllPosts();
---

<BaseLayout
  title="Blog - My HomePage"
  description="Read about my experiences, tutorials, and thoughts on web development"
>
  <div class="mb-8">
    <h1 class="mb-4 text-3xl font-bold text-gray-900">Blog</h1>
    <p class="text-gray-600">
      Welcome to my blog where I share my experiences, tutorials, and thoughts
      on web development.
    </p>
  </div>

  {
    posts.length > 0 ? (
      <div class="space-y-8">
        {posts.map((post) => (
          <article class="border-b border-gray-200 pb-8">
            <div class="mb-4">
              <div class="mb-3 flex flex-col md:flex-row md:items-center md:justify-between">
                <h2 class="text-xl font-semibold text-gray-900">
                  <a
                    href={`/blog/${post.slug}`}
                    class="transition-colors hover:text-blue-600"
                  >
                    {post.data.title}
                  </a>
                </h2>
                <time class="text-sm text-gray-500 md:text-base">
                  {formatDate(post.data.date)}
                </time>
              </div>

              <p class="mb-4 text-gray-600">{post.data.description}</p>

              {post.data.tags && post.data.tags.length > 0 && (
                <div class="mb-4 flex flex-wrap gap-2">
                  {post.data.tags.map((tag) => (
                    <span class="rounded-full bg-blue-100 px-2 py-1 text-xs text-blue-800">
                      {tag}
                    </span>
                  ))}
                </div>
              )}

              <a
                href={`/blog/${post.slug}`}
                class="font-medium text-blue-600 hover:text-blue-800"
              >
                Read more â†’
              </a>
            </div>
          </article>
        ))}
      </div>
    ) : (
      <div class="py-12 text-center">
        <div class="mb-4 text-gray-500">
          <p class="mb-2 text-lg">No blog posts yet!</p>
          <p>Check back later for new content.</p>
        </div>
        <div class="text-sm text-gray-400">
          <p>
            Add blog posts to:{' '}
            <code class="rounded bg-gray-100 px-2 py-1">src/content/blog/</code>
          </p>
          <p>
            See content guidelines:{' '}
            <code class="rounded bg-gray-100 px-2 py-1">
              src/content/README.md
            </code>
          </p>
        </div>
      </div>
    )
  }
</BaseLayout>
