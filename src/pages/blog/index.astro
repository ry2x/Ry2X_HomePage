---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getAllPosts, formatDate } from '../../lib/content';

const posts = await getAllPosts();
---

<BaseLayout 
  title="Blog - My HomePage" 
  description="Read about my experiences, tutorials, and thoughts on web development"
>
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-4">Blog</h1>
    <p class="text-gray-600">
      Welcome to my blog where I share my experiences, tutorials, and thoughts on web development.
    </p>
  </div>

  {posts.length > 0 ? (
    <div class="space-y-8">
      {posts.map((post) => (
        <article class="border-b border-gray-200 pb-8">
          <div class="mb-4">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-3">
              <h2 class="text-xl font-semibold text-gray-900">
                <a href={`/blog/${post.slug}`} class="hover:text-blue-600 transition-colors">
                  {post.data.title}
                </a>
              </h2>
              <time class="text-sm text-gray-500 md:text-base">
                {formatDate(post.data.date)}
              </time>
            </div>
            
            <p class="text-gray-600 mb-4">
              {post.data.description}
            </p>
            
            {post.data.tags && post.data.tags.length > 0 && (
              <div class="flex flex-wrap gap-2 mb-4">
                {post.data.tags.map((tag) => (
                  <span class="text-xs bg-blue-100 text-blue-800 px-2 py-1 rounded-full">
                    {tag}
                  </span>
                ))}
              </div>
            )}
            
            <a 
              href={`/blog/${post.slug}`}
              class="text-blue-600 hover:text-blue-800 font-medium"
            >
              Read more â†’
            </a>
          </div>
        </article>
      ))}
    </div>
  ) : (
    <div class="text-center py-12">
      <div class="text-gray-500 mb-4">
        <p class="text-lg mb-2">No blog posts yet!</p>
        <p>Check back later for new content.</p>
      </div>
      <div class="text-sm text-gray-400">
        <p>Add blog posts to: <code class="bg-gray-100 px-2 py-1 rounded">src/content/blog/</code></p>
        <p>See content guidelines: <code class="bg-gray-100 px-2 py-1 rounded">src/content/README.md</code></p>
      </div>
    </div>
  )}
</BaseLayout>
