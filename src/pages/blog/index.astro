---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getAllPosts, formatDate } from '../../lib/content';
import Tag from '../../components/Tag.astro';

const posts = await getAllPosts();
---

<BaseLayout
  title="Blog - Ry2X.NET"
  description="Thoughts on Rust, Linux, and development."
>
  <!-- Page header -->
  <div class="mb-6 flex items-center gap-4">
    <h1
      class="font-mono text-[10px] tracking-widest text-gray-400 uppercase dark:text-gray-500"
    >
      Blog
    </h1>
    <div class="h-px flex-1 bg-gray-200 dark:bg-white/5"></div>
  </div>

  {
    posts.length > 0 ? (
      <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
        {posts.map((post) => (
          <a
            href={`/blog/${post.slug}`}
            class="hero-card group relative overflow-hidden rounded-3xl border border-gray-200 p-6 transition-shadow hover:shadow-sm dark:border-white/10"
          >
            <div class="hero-card-glow pointer-events-none absolute inset-0" />
            <div class="relative">
              <time class="mb-3 block font-mono text-[10px] tracking-widest text-gray-400 uppercase dark:text-gray-600">
                {formatDate(post.data.date)}
              </time>
              <h2 class="mb-2 text-lg font-bold text-gray-900 dark:text-white">
                {post.data.title}
              </h2>
              <p class="mb-4 line-clamp-2 text-sm text-gray-500 dark:text-gray-400">
                {post.data.description}
              </p>
              {post.data.tags && post.data.tags.length > 0 && (
                <div class="flex flex-wrap gap-1.5">
                  {post.data.tags.map((tag) => (
                    <Tag tag={tag} />
                  ))}
                </div>
              )}
            </div>
          </a>
        ))}
      </div>
    ) : (
      <div class="hero-card relative flex min-h-64 items-center justify-center overflow-hidden rounded-3xl border border-gray-200 dark:border-white/10">
        <div class="hero-card-glow pointer-events-none absolute inset-0" />
        <p class="relative text-sm text-gray-400 dark:text-gray-600">
          No posts yet.
        </p>
      </div>
    )
  }
</BaseLayout>
