---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getAllPosts, getAllProjects } from '../lib/content';

// Get recent posts and projects for the homepage
const recentPosts = (await getAllPosts()).slice(0, 3);
const recentProjects = (await getAllProjects()).slice(0, 3);
---

<BaseLayout
  title="Home - My HomePage"
  description="Welcome to my personal website showcasing my projects and thoughts"
>
  <!-- Hero Section -->
  <section class="mb-12 py-12 text-center">
    <h1 class="mb-4 text-4xl font-bold text-gray-900 md:text-5xl">
      Welcome to My HomePage
    </h1>
    <p class="mx-auto max-w-2xl text-xl leading-relaxed text-gray-600">
      I'm a developer passionate about creating amazing web experiences. Explore
      my projects and read about my journey in tech.
    </p>
    <div class="mt-8 space-x-4">
      <a
        href="/projects"
        class="rounded-md bg-blue-600 px-6 py-3 text-white transition-colors hover:bg-blue-700"
      >
        View Projects
      </a>
      <a
        href="/blog"
        class="rounded-md border border-gray-300 px-6 py-3 text-gray-700 transition-colors hover:bg-gray-50"
      >
        Read Blog
      </a>
    </div>
  </section>

  <!-- Recent Projects -->
  {
    recentProjects.length > 0 && (
      <section class="mb-12">
        <div class="mb-6 flex items-center justify-between">
          <h2 class="text-2xl font-bold text-gray-900">Recent Projects</h2>
          <a href="/projects" class="text-blue-600 hover:text-blue-800">
            View all →
          </a>
        </div>
        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
          {recentProjects.map((project) => (
            <article class="rounded-lg border border-gray-200 p-6 transition-shadow hover:shadow-md">
              {project.data.cover && (
                <img
                  src={project.data.cover}
                  alt={project.data.title}
                  class="mb-4 h-40 w-full rounded-md object-cover"
                />
              )}
              <h3 class="mb-2 text-lg font-semibold text-gray-900">
                <a
                  href={`/projects/${project.slug}`}
                  class="hover:text-blue-600"
                >
                  {project.data.title}
                </a>
              </h3>
              <p class="mb-4 text-gray-600">{project.data.description}</p>
              {project.data.tags && (
                <div class="flex flex-wrap gap-2">
                  {project.data.tags.map((tag) => (
                    <span class="rounded bg-gray-100 px-2 py-1 text-xs text-gray-700">
                      {tag}
                    </span>
                  ))}
                </div>
              )}
            </article>
          ))}
        </div>
      </section>
    )
  }

  <!-- Recent Blog Posts -->
  {
    recentPosts.length > 0 && (
      <section>
        <div class="mb-6 flex items-center justify-between">
          <h2 class="text-2xl font-bold text-gray-900">Recent Posts</h2>
          <a href="/blog" class="text-blue-600 hover:text-blue-800">
            View all →
          </a>
        </div>
        <div class="space-y-6">
          {recentPosts.map((post) => (
            <article class="border-b border-gray-200 pb-6">
              <div class="mb-2 flex flex-col md:flex-row md:items-center md:justify-between">
                <h3 class="text-lg font-semibold text-gray-900">
                  <a href={`/blog/${post.slug}`} class="hover:text-blue-600">
                    {post.data.title}
                  </a>
                </h3>
                <time class="text-sm text-gray-500">
                  {new Date(post.data.date).toLocaleDateString('ja-JP')}
                </time>
              </div>
              <p class="mb-3 text-gray-600">{post.data.description}</p>
              {post.data.tags && (
                <div class="flex flex-wrap gap-2">
                  {post.data.tags.map((tag) => (
                    <span class="rounded bg-gray-100 px-2 py-1 text-xs text-gray-700">
                      {tag}
                    </span>
                  ))}
                </div>
              )}
            </article>
          ))}
        </div>
      </section>
    )
  }

  <!-- Empty State -->
  {
    recentPosts.length === 0 && recentProjects.length === 0 && (
      <section class="py-12 text-center">
        <div class="mb-8 text-gray-500">
          <p class="mb-4 text-lg">No content available yet.</p>
          <p>Start by adding some projects and blog posts!</p>
        </div>
        <div class="space-y-4 text-sm text-gray-400">
          <p>
            Add projects:{' '}
            <code class="rounded bg-gray-100 px-2 py-1">
              src/content/projects/
            </code>
          </p>
          <p>
            Add blog posts:{' '}
            <code class="rounded bg-gray-100 px-2 py-1">src/content/blog/</code>
          </p>
          <p>
            See:{' '}
            <code class="rounded bg-gray-100 px-2 py-1">
              src/content/README.md
            </code>{' '}
            for guidelines
          </p>
        </div>
      </section>
    )
  }
</BaseLayout>
