---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getAllProjects, formatDate } from '../../lib/content';

const projects = await getAllProjects();
---

<BaseLayout
  title="Projects - My HomePage"
  description="Explore my portfolio of web development projects and experiments"
>
  <div class="mb-8">
    <h1 class="mb-4 text-3xl font-bold text-gray-900">Projects</h1>
    <p class="text-gray-600">
      Here's a collection of projects I've worked on. Each one represents a
      learning experience and a step forward in my development journey.
    </p>
  </div>

  {
    projects.length > 0 ? (
      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        {projects.map((project) => (
          <article class="overflow-hidden rounded-lg border border-gray-200 transition-shadow hover:shadow-lg">
            {project.data.cover && (
              <img
                src={project.data.cover}
                alt={project.data.title}
                class="h-48 w-full object-cover"
              />
            )}

            <div class="p-6">
              <div class="mb-4">
                <h2 class="mb-2 text-xl font-semibold text-gray-900">
                  <a
                    href={`/projects/${project.slug}`}
                    class="transition-colors hover:text-blue-600"
                  >
                    {project.data.title}
                  </a>
                </h2>

                {project.data.date && (
                  <time class="text-sm text-gray-500">
                    {formatDate(project.data.date)}
                  </time>
                )}
              </div>

              <p class="mb-4 text-gray-600">{project.data.description}</p>

              {project.data.tags && project.data.tags.length > 0 && (
                <div class="mb-4 flex flex-wrap gap-2">
                  {project.data.tags.map((tag) => (
                    <span class="rounded bg-gray-100 px-2 py-1 text-xs text-gray-700">
                      {tag}
                    </span>
                  ))}
                </div>
              )}

              <a
                href={`/projects/${project.slug}`}
                class="text-sm font-medium text-blue-600 hover:text-blue-800"
              >
                Learn more â†’
              </a>
            </div>
          </article>
        ))}
      </div>
    ) : (
      <div class="py-12 text-center">
        <div class="mb-4 text-gray-500">
          <p class="mb-2 text-lg">No projects yet!</p>
          <p>Projects will appear here once I start adding them.</p>
        </div>
        <div class="text-sm text-gray-400">
          <p>
            Add projects to:{' '}
            <code class="rounded bg-gray-100 px-2 py-1">
              src/content/projects/
            </code>
          </p>
          <p>
            See content guidelines:{' '}
            <code class="rounded bg-gray-100 px-2 py-1">
              src/content/README.md
            </code>
          </p>
        </div>
      </div>
    )
  }
</BaseLayout>
