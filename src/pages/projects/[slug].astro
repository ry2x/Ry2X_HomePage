---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getAllProjects, formatDate } from '../../lib/content';
import Tag from '../../components/Tag.astro';

export async function getStaticPaths() {
  const projects = await getAllProjects();
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await project.render();
---

<BaseLayout
  title={`${project.data.title} - Projects`}
  description={project.data.description}
  image={project.data.cover}
>
  <article>
    <!-- Back to Projects -->
    <div class="mb-6">
      <a
        href="/projects"
        class="text-sm text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300"
      >
        ‚Üê Back to Projects
      </a>
    </div>

    <!-- Project Header -->
    <header class="mb-8">
      {
        project.data.cover && (
          <img
            src={project.data.cover}
            alt={project.data.title}
            class="mb-6 h-64 w-full rounded-lg object-cover md:h-80"
          />
        )
      }

      <h1
        class="mb-4 text-3xl font-bold text-gray-900 md:text-4xl dark:text-gray-100"
      >
        {project.data.title}
      </h1>

      <div
        class="mb-4 flex flex-col text-sm text-gray-600 md:flex-row md:items-center md:justify-between dark:text-gray-400"
      >
        {project.data.date && <time>{formatDate(project.data.date)}</time>}

        {
          project.data.tags && project.data.tags.length > 0 && (
            <div class="mt-2 flex flex-wrap gap-2 md:mt-0">
              {project.data.tags.map((tag) => (
                <Tag tag={tag} />
              ))}
            </div>
          )
        }
      </div>

      <div class="mb-8 border-b border-gray-200 dark:border-gray-700"></div>
    </header>

    <!-- Project Content -->
    <div class="prose dark:prose-invert max-w-none">
      <Content />
    </div>
  </article>
</BaseLayout>
