---
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon/components';
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getAllProjects, formatDate } from '../../lib/content';
import Tag from '../../components/Tag.astro';

export async function getStaticPaths() {
  const projects = await getAllProjects();
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await project.render();
const cover = project.data.cover;
---

<BaseLayout
  title={`${project.data.title} - Projects`}
  description={project.data.description}
  image={cover?.src}
>
  <article>
    <!-- Back to Projects -->
    <div class="mb-8">
      <a
        href="/projects"
        class="btn-slide btn-slide-secondary group inline-flex items-center gap-2 rounded-full border border-gray-300 px-4 py-1.5 font-mono text-xs text-gray-500 transition-colors hover:text-gray-800 dark:border-white/20 dark:text-gray-400 dark:hover:text-gray-200"
      >
        <span
          class="transition-transform duration-200 group-hover:-translate-x-0.5"
          ><Icon name="octicon:arrow-left-16" /></span
        >
        Back to Projects
      </a>
    </div>

    <!-- Project Header -->
    <header class="mb-8">
      {
        cover && (
          <Image
            src={cover}
            alt={project.data.title}
            class="mb-6 h-64 w-full rounded-lg object-cover md:h-80"
          />
        )
      }

      <h1
        class="mb-4 text-3xl font-bold text-gray-900 md:text-4xl dark:text-gray-100"
      >
        {project.data.title}
      </h1>

      <div
        class="mb-4 flex flex-col text-sm text-gray-600 md:flex-row md:items-center md:justify-between dark:text-gray-400"
      >
        {project.data.date && <time>{formatDate(project.data.date)}</time>}

        {
          project.data.tags && project.data.tags.length > 0 && (
            <div class="mt-2 flex flex-wrap gap-2 md:mt-0">
              {project.data.tags.map((tag) => (
                <Tag tag={tag} />
              ))}
            </div>
          )
        }
      </div>

      <div class="mb-8 border-b border-gray-200 dark:border-gray-700"></div>
    </header>

    <!-- Project Content -->
    <div class="prose dark:prose-invert max-w-none">
      <Content />
    </div>
  </article>
</BaseLayout>
